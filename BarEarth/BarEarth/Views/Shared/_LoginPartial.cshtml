@using Microsoft.AspNetCore.Identity
@using BarEarth.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<link rel="stylesheet" href="~/css/LoginPartial.css" />

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li>
                <p class="text-black-50" title="Manage">@UserManager.GetUserName(User)</p>
            </li>
            <li>
                <button type="submit" class="btn btn-raised btn-dark">Log out</button>
            </li>
        </ul>
    </form>
}
else
{

    <div class="btn-group" role="group" aria-label="Test">
        <a asp-area="" asp-controller="Account" asp-action="Register" type="button" class="btn btn-raised btn-dark">Register</a>
        <a asp-area="" asp-controller="Account" asp-action="Login" type="button" class="btn btn-raised btn-dark">Log in</a>
    </div>

}
