@model IEnumerable<BarEarth.Models.Rating>
@inject BarEarth.Data.ApplicationDbContext context;
@{ViewData["Title"] = "Ratings";}



<div class="container" style="margin-top:15px;">
    <div class="row justify-content-center">
        <div class="card bg-light col-10">
            <div class="card-img-overlay d-flex flex-row-reverse ">
            </div>
            <div class="card-body">
                <div class="card-header">
                    <h2 class="card-title">
                        <a asp-controller="Admin" asp-action="Bars" class="btn bnt-link">
                            <i class="material-icons">arrow_back</i>
                        </a>
                        Ratings
                    </h2>
                </div>

                <form asp-controller="Admin" asp-action="ProductsEdit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    
                    <div class="row">
                        <div class="col-md-10">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Rate)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Review)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.UserName)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.DateTime)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Bar)
                                        </th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Rate)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Review)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.UserName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DateTime)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Bar.Name)
                                </td>
                                <td>
                                    <a asp-action="DeleteRating" type="button" asp-route-id="@item.Id" class="btn btn-raised btn-dark">Delete</a>
                                </td>
                            </tr>
}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>