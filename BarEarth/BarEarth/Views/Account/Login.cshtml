@using System.Collections.Generic
@using System.Linq
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Authentication
@model LoginViewModel
@inject SignInManager<ApplicationUser> SignInManager

@{
    ViewData["Title"] = "Log in";
}


<div class="card" style="width: 24rem; background-color: #fff; margin:auto; margin-top: 10vh;">
    <div class="card-body" style="padding:16px">
        <form asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
            <h4>Login</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <!--Email-->
            <div class="form-group">
                <label asp-for="Email" for="inputEmail" class="bmd-lable-floating">Email address</label>
                <input asp-for="Email" class="form-control" type="email" id="inputEmail" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <!--Password-->
            <div class="form-group">
                <label asp-for="Password" for="inputPassword" class="bmd-lable-floating">Password</label>
                <input asp-for="Password" class="form-control" type="password" id="inputPassword" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <!--Remember me-->
            <div class="checkbox">
                <label asp-for="RememberMe">
                    <input type="checkbox" asp-for="RememberMe" />
                    @Html.DisplayNameFor(m => m.RememberMe)
                </label>
            </div>
            <button type="submit" class="btn btn-raised btn-primary">Log in</button>
            <div class="form-group">
                <a asp-action="ForgotPassword" class="btn btn-link btn-sm">Forgot your password?</a>
                <a asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]" class="btn btn-link btn-sm">Register as a new user?</a>
            </div>
        </form>
        <hr />
        <p class="mx-auto">OR</p>
        <section>
            @{
                var loginProviders = (await SignInManager.GetExternalAuthenticationSchemesAsync()).ToList();
                if (loginProviders.Count == 0)
                {
                    <div>
                        <p>
                            There are no external authentication services configured. See <a href="https://go.microsoft.com/fwlink/?LinkID=532715">this article</a>
                            for details on setting up this ASP.NET application to support logging in via external services.
                        </p>
                    </div>
                }
                else
                {
                    <form asp-action="ExternalLogin" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal">
                        <div>
                            <p>
                                @foreach (var provider in loginProviders)
                                {
                                    <button type="submit" class="btn btn-default" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">@provider.Name</button>
                                }
                            </p>
                        </div>
                    </form>
                }
            }
        </section>

    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
